{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card_body">
        <form action="/admin/postagens/nova" method="POST">
              <label for="titulo">Título: </label>
              <input type="text" name="titulo" class="form-control">
              <label for="slug">Slug: </label>
              <input type="text" name="slug" class="form-control">
              <label for="descrição">Descrição: </label>
              <input type="text" name="descrição" class="form-control">
              <label for="conteudo">Conteúdo: </label>
              <textarea name="conteudo" id="" cols="30" class="form-control" rows="10"></textarea>
              <label for="categoria">Ctegoria: </label>
              <select name="categoria" class="custom-select" id="">
                  {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                  {{/each}}
              </select>
              <button type="submit" class="btn btn-success mt-3">Criar post</button><br>
        </form>
    </div>
</div>